<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/head_layout_public" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relative_temp1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/login_edit" >

                <TextView
                    android:id="@+id/tx_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择银行"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_fund_detail_more_icon_pressed" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edit_temp1"
                style="@style/input_edit"
                android:hint="请输入银行卡卡号"
                android:inputType="number" />

            <RelativeLayout
                android:id="@+id/relative_temp2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/login_edit" >

                <TextView
                    android:id="@+id/tx_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择省份"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_fund_detail_more_icon_pressed" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_temp3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/login_edit" >

                <TextView
                    android:id="@+id/tx_temp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择地区"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/new_fund_detail_more_icon_pressed" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edit_temp2"
                style="@style/input_edit"
                android:hint="请输入开户行名称" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_marginTop="15.0dip"
                android:text="您最近绑定的银行卡:"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tx_temp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_marginTop="15.0dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/bt_temp1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/btn_big_n"
                android:gravity="center"
                android:paddingBottom="10.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="10.0dip"
                android:text="绑定银行卡"
                android:textColor="@color/white"
                android:textSize="18.0sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>