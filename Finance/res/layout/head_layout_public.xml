<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_head_bg"
    android:paddingBottom="5.0dip"
    android:paddingLeft="5.0dip"
    android:paddingRight="5.0dip"
    android:paddingTop="5.0dip" >

    <ImageButton
        android:id="@+id/head_btn_showLeft_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/back_btn_n"
        android:visibility="gone" />

    <Button
        android:id="@+id/head_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_big_n"
        android:gravity="center"
        android:paddingBottom="5.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="5.0dip"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

    <TextView
        android:id="@+id/head_textview_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="5.0dip"
        android:paddingTop="5.0dip"
        android:text=""
        android:textColor="@color/white"
        android:textSize="22.0sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/head_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_big_n"
        android:gravity="center"
        android:paddingBottom="5.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="5.0dip"
        android:text="刷新"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

    <ImageButton
        android:id="@+id/head_btn_showRight_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/head_btn_right"
        android:visibility="gone" />

    <Button
        android:id="@+id/head_cart_num_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/head_btn_showLeft_public"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_toLeftOf="@+id/head_btn_showRight_public"
        android:background="@drawable/cart_num_02"
        android:textColor="#ffc81b2c"
        android:visibility="gone" />

    <TextView
        android:id="@+id/head_cart_add_num_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/head_btn_showLeft_public"
        android:layout_alignLeft="@+id/head_btn_showRight_public"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="5.0dip"
        android:textColor="#ffc81b2c"
        android:textSize="18.0sp"
        android:visibility="gone" />

</RelativeLayout>