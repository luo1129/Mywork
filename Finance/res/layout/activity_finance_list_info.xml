<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tbp="http://schemas.android.com/apk/res/com.yrz.atourong"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/fragment_actionbar" />

    <LinearLayout
        style="@style/tab_item_login"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5.0dip"
            android:orientation="vertical" >

            <!--
                 <com.yrz.atourong.tab.TabPageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tbp:is_blue="true" />
            -->
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vHDivider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@drawable/listview_divider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

</LinearLayout>