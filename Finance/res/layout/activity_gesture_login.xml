<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gesture_lock_bg"
    android:orientation="vertical" >

    <com.yrz.atourong.widget.CircularImage
        android:id="@+id/gesture_login_iv_userimg"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/gesture_login_user_head_bg" />

    <TextView
        android:id="@+id/gesture_login_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center_horizontal" >

        <com.yrz.atourong.widget.LockPatternView
            android:id="@+id/gesture_login_lockview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <TextView
            android:id="@+id/gesture_login_tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30.0dip"
            android:text="忘记手势密码"
            android:textColor="@color/white"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/gesture_login_tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="20.0dip"
            android:paddingLeft="0.0dip"
            android:paddingRight="35.0dip"
            android:paddingTop="20.0dip"
            android:text="使用其他账号登录"
            android:textColor="@color/white"
            android:textSize="14.0sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>